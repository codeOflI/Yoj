<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yoj.web.dao.UserMapper">
    <resultMap id="BaseResultMap" type="com.yoj.web.pojo.User">
        <id column="user_id" jdbcType="INTEGER" property="userId"/>
    </resultMap>

    <resultMap id="UserList" type="com.yoj.web.pojo.User">
        <id column="user_id" jdbcType="INTEGER" property="userId"/>
        <result column="username" jdbcType="VARCHAR" property="username"/>
        <result column="rank" jdbcType="INTEGER" property="rank"/>
        <association property="attempted" javaType="INTEGER"
                     select="com.yoj.web.dao.SolutionMapper.countAttemptedByUserId"
                     column="user_id">
        </association>
        <association property="solved" javaType="INTEGER"
                     select="com.yoj.web.dao.SolutionMapper.countSolvedByUserId"
                     column="user_id">
        </association>
        <association property="accepted" javaType="INTEGER"
                     select="com.yoj.web.dao.SolutionMapper.countAcceptedByUserId"
                     column="user_id">
        </association>
        <association property="submissions" javaType="INTEGER"
                     select="com.yoj.web.dao.SolutionMapper.countSubmissionsByUserId"
                     column="user_id">
        </association>
    </resultMap>

    <select id="getUserList" parameterType="com.yoj.web.pojo.User" resultMap="UserList">
           SELECT user_id,username,nick_name FROM user
           <where>
               <if test="username != null">
                  AND username LIKE CONCAT('%',#{username},'%')
               </if>
           </where>
           ORDER BY score DESC
    </select>

    <select id="getUserInfoById" parameterType="com.yoj.web.pojo.User" resultMap="UserList">

    </select>

</mapper>